<% @movies.each do |movie| %>
  <section class="movie">
    <div class="summary">
      <h2><%= movie.title %> (<%= year_of(movie) %>)</h2>
      <h3><%= total_gross(movie) %></h3>
      <p>
      <%= truncate(movie.description, length: 40, separator: " ") %>
      </p>
    </div>
  </section>
<% end %>
