<h1>Editing <%= @movie.title %></h1>

<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :descripton %>
  <%= f.text_area :description, rows: 6 %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.label :released_on %>
  <%= f.date_select :released_on, {}, class: "date" %>

  <%= f.label :total_gross %>
  <%= f.number_field :total_gross %>

  <%= f.submit %>

<% end %>
